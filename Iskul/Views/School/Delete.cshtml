@model Iskul_Models.School
@using Iskul_Utility

@* View Model is not needed here so model is the School model*@

<form method="post">

    <input asp-for="Id" hidden />
    }
    <div class="border p-3 bg-white">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delecte School</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="SchoolName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SchoolName" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="ShortDesc"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ShortDesc" disabled class="form-control" />
                    </div>

                </div>
                @*<div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                    </div>

                </div>*@


                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        @*<select asp-for="CategoryId" asp-items="@ViewBag.CategoryDropDown" class="form-control">
                                <option disabled selected>--Select Category--</option>
                            </select>*@
                        @*using ViewData here as an alternative*@

                        @*<select asp-for="CategoryId" asp-items="@ViewData["CategoryDropDown"] as IEnumerable<SelectListItem>" class="form-control">
                                <option disabled selected>--Select Category--</option>
                            </select>*@

                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>

                </div>
                @*<div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>

                </div>*@


                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                            <button type="submit" class="btn btn-danger w-100">Delete</button>

                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" class="w-100" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });
        });

    </script>
}
