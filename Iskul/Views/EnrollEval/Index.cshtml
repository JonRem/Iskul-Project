@model Iskul_Models.ViewModels.EnListVM



<form method="get">
    <input asp-for="@Model.StatusList" hidden />

    <div class="container p-4 my-3">
        <h2 class="text-info">Enrollment Management</h2>
        <div class="border bg-white p-3" style="border-radius:15px;">
            <div class="row">
                <div class="col-12">
                    <div class="row" style="padding-top:10px">
                        <div class="col-4">
                            @Html.Editor("searchSchool", new { htmlAttributes = new { @class = "form-control", @placeholder = "School..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchLastName", new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchFirstName", new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name..." } })
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-4">
                            @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control", @placeholder = "Email..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control", @placeholder = "Phone..." } })
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-4">
                            @Html.DropDownListFor(u=>u.Status,Model.StatusList,"--Application Status--",new {@class="form-select" })
                        </div>
                        <div class="offset-4 col-4">
                            <button type="submit" class="h-100 btn btn-info form-control">
                                <i class="fas fa-search"></i>Search
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
<hr />
@{ 
    var valueAccessor = "valueAccessorFn"; 
} 
<div class="bg-white p-3">
    @*<ejs-grid id="GridOverview" allowFiltering="true" allowSorting="true" height="600" rowHeight="38" enableHover="false" load="load" queryCellInfo="queryCellInfo" dataBound="startTimer" actionComplete="complete" enableVirtualization="true" allowSelection="true">*@
    <ejs-grid id="Grid" dataSource="@Model.EnrollHList" allowFiltering="true" allowSorting="true" allowPaging="true">
        <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
        @*<e-grid-selectionsettings persistSelection="true" type="Multiple" checkboxOnly="true"></e-grid-selectionsettings>*@
        <e-grid-columns>
            <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="School.SchoolName" headerText="School Name" textAlign="Right"></e-grid-column>
            <e-grid-column field="LastName" headerText="Last Name" textAlign="Right"></e-grid-column>
            <e-grid-column field="FirstName" headerText="First Name" textAlign="Right"></e-grid-column>
            <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
            <e-grid-column field="PhoneNumber" headerText="Phone" textAlign="Right"></e-grid-column>
            <e-grid-column field="DetailRecOpen" headerText="Status" valueAccessor="valueAccessor" 
                textAlign="Right" filter="@(new {itemTemplate="#itemTemplate"})" allowEditing="false"></e-grid-column>
            @*<e-grid-column field="OrderDate" headerText="Order Date" customFormat="@(new { type = "date", format = "MM/dd/yyyy" })" textAlign="Right"></e-grid-column>*@
            <e-grid-column field="Id" headerText="" width="70"
                           template="<a rel='nofollow' href='EnrollEval/Details/${Id}' class='btn btn-primary'> <i class='fas fa-list'></i></a>"></e-grid-column>


            @*<e-grid-column field="Employees" headerText="Employee Name" filter="@(new { type="CheckBox"})" clipMode="EllipsisWithTooltip" template="#empTemplate" width="200"></e-grid-column>
            <e-grid-column field="Designation" headerText="Designation" filter="@(new { type="CheckBox"})" clipMode="EllipsisWithTooltip" width="170"></e-grid-column>
            <e-grid-column field="Mail" headerText="Mail" filter="@(new { type="Menu"})" width="230"></e-grid-column>
            <e-grid-column field="Location" headerText="Location" template="#coltemplate" filter="@(new { type="CheckBox"})" width="140"></e-grid-column>
            <e-grid-column field="Status" headerText="Status" template="#statusTemplate" filter="@(new { type="CheckBox", itemTemplate="#StatusItemTemp" })" width="150"></e-grid-column>
            <e-grid-column field="Trustworthiness" headerText="Trustworthiness" filter="@(new { type="CheckBox", itemTemplate="${ trustTemp(data) }"})" template="#trustTemplate" width="200"></e-grid-column>
            <e-grid-column field="Rating" headerText="Rating" filter="@(new { type="CheckBox", itemTemplate="<div>${ratingDetail(data)}</div>"})" template="#ratingTemplate" width="160"></e-grid-column>
            <e-grid-column field="Software" headerText="Software" allowSorting="false" allowFiltering="false" template="#progessTemplate" width="180"></e-grid-column>
            <e-grid-column field="CurrentSalary" headerText="Current Salary" filter="@(new { type="Menu"})" format="C2" textAlign="Right" width="160"></e-grid-column>
            <e-grid-column field="Address" headerText="Address" filter="@(new { type="Menu"})" width="240"></e-grid-column>*@
        </e-grid-columns>
    </ejs-grid>
</div>

 @section Scripts{
    <script>
        function valueAccessorFn(field, data, column) {
            var value = data[field]
            if (value) {
                return "Open"
            } else {
                return "Closed"
            }
        }
    </script>
    <script id="itemTemplate" type="text/x-template">

        <div>
            ${if(DetailRecOpen)}
            <span>Open</span> ${else}
            <span>Closed</span>
            ${/if}
        </div>
    </script>

 }